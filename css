    font-size: 1rem;
    color: #333; /* Warna teks footer */
}

/* Animasi untuk menampilkan hasil BMI */
#result {
    opacity: 0;
    transform: translateY(20px);
    animation: fadeInUp 0.5s forwards; /* Efek animasi masuk */
}

@keyframes fadeInUp {
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

/* Responsif untuk perangkat dengan layar kecil */
